{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "lib": ["es6", "dom"],
    "noUnusedLocals": true,
    "esModuleInterop": true,  
    "skipLibCheck": true,  
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",                     
    "**/*.test.ts"                      
  ]
}
